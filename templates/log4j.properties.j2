log4j.rootLogger={{ zookeeper_log4j_rootlogger }}
log4j.appender.ROLLINGFILE=org.apache.log4j.RollingFileAppender
log4j.appender.ROLLINGFILE.Threshold={{ zookeeper_log4j_rollingfile_threshold }}
log4j.appender.ROLLINGFILE.File={{ zookeeper_log4j_rollingfile_file }}
log4j.appender.ROLLINGFILE.MaxFileSize={{ zookeeper_log4j_rollingfile_maxfilesize }}
log4j.appender.ROLLINGFILE.MaxBackupIndex={{ zookeeper_log4j_rollingfile_maxbackupindex }}
log4j.appender.ROLLINGFILE.layout=org.apache.log4j.PatternLayout
log4j.appender.ROLLINGFILE.layout.ConversionPattern=%d{ISO8601} [myid:%X{myid}] - %-5p [%t:%C{1}@%L] - %m%n
